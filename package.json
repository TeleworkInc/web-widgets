{
  "name": "web-widgets",
  "version": "0.0.1",
  "description": "",
  "author": "Christian Lewis <hello@trytelework.com>",
  "license": "MIT",
  "type": "module",
  "bin": {
    "web-widgets": "./dist/cli.cjs",
    "web-widgets-dev": "./exports/cli.js"
  },
  "main": "./dist/widgets.cjs",
  "exports": {
    "import": "./dist/widgets.mjs",
    "require": "./dist/widgets.cjs"
  },
  "scripts": {
    "create-bin": "mkdir -p dist && touch dist/cli.cjs",
    "cold-start": "npm run gnv-get && gnv-dev build",
    "gnv-install": "npm run create-bin && node .gnv/npm/install.js",
    "gnv-install-dev": "npm run create-bin && node .gnv/npm/installDev.js",
    "prebuild": "npm run clean",
    "build": "npm run build:dev && npm run build:dist && npm run build:exe && npm run format-clis",
    "build:dev": "rollup -c .gnv/rollup.dev.es.js && rollup -c .gnv/rollup.dev.cjs.js",
    "build:dist": "rollup -c .gnv/rollup.dist.es.js && rollup -c .gnv/rollup.dist.cjs.js && npm run minify:dist",
    "build:exe": "node .gnv/npm/buildExes.js && npm run exe:save",
    "postbuild": "npm run test",
    "minify:dist": "rollup -c .gnv/rollup.dist.minify.js",
    "exe": "enable-browser-mode dist/exe.js",
    "exe:freeze": "enable-browser-mode dist/exe.freeze.js",
    "exe:freeze:dev": "cat widget.freeze.html > widget.freeze.dev.html && sed -i s,dist/exe.initState.js,exports/exe.initState.js,g widget.freeze.dev.html",
    "exe:save": "npm run --silent exe:freeze > widget.freeze.html && npm run exe:freeze:dev",
    "format-clis": "sed -i '1i #!/usr/bin/env node' dist/cli.* && (chmod -f +x exports/cli.* dev/cli.* dist/cli.* || true)",
    "clean": "rm -rf dist/* && rm -rf dev/*",
    "serve": "node .gnv/npm/serve.js",
    "test": "mocha"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "homepage": "",
  "gnvDependencies": {
    "await-shell": "latest",
    "commander": "6.0.0",
    "chalk": "4.1.0",
    "chokidar": "3.4.0",
    "ora": "4.0.4",
    "tree-node-cli": "1.4.0"
  },
  "peerDependencies": {
    "@ampproject/rollup-plugin-closure-compiler": "0.26.0",
    "@rollup/plugin-commonjs": "15.0.0",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "9.0.0",
    "builtin-modules": "latest",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "enable-browser-mode": "latest",
    "reload": "3.1.0",
    "express": "^4.17.1",
    "glob": "7.1.6",
    "google-closure-compiler": "20200719.0.0",
    "mocha": "8.0.1",
    "rollup": "2.21.0",
    "rollup-plugin-bundle-size": "latest",
    "rollup-plugin-disable-packages": "3.0.0",
    "rollup-plugin-export-default": "1.4.0",
    "rollup-plugin-import-meta-url": "5.0.0",
    "rollup-plugin-preserve-shebang": "1.0.1",
    "livereload": "latest",
    "connect-livereload": "latest"
  },
  "dependencies": {}
}